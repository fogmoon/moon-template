
/////////////////////////////////////////////////////////
//				 Base units parameters                 //
/////////////////////////////////////////////////////////

main-width = 80%
main-pad = (100% - main-width) /2
elt-margin = 10px
top-nav-height = 50px


/////////////////////////////////////////////////////////
//				   Buttons parameters                  //
/////////////////////////////////////////////////////////

button_width = 80px
button_height = 40px



//////////////// -- Stop editing now -- /////////////////


/////////////////////////////////////////////////////////
//			             Functions                     //
/////////////////////////////////////////////////////////

centeredPad(wid = main-width, pad = main-pad)
	width: wid
	padding 0 pad


/////////////////////////////////////////////////////////
//			                Base                       //
/////////////////////////////////////////////////////////

a
	text-decoration initial

body
	centeredPad()

	> header
		font-size 2em
		+ nav
			> ul
				display block
				> li
					display inline-block
					min-width (main-width / 10)
					height top-nav-height
					vertical-align middle
					line-height top-nav-height
					text-align center
					margin (main-width / 100)

					

	header
		margin (elt-margin/2) 0
		padding (elt-margin/2) 0px
		
	> section
		> article
			> aside:only-of-type
				float left
				width 20%
				margin-left -25%
				font-size 12px
				line-height 1.8
			margin 0 0 20px 0px
			display inline-table
			
		> article[data-aside="true"]
			margin 0 0 20px 20%

	> footer
		display block
		

/////////////////////////////////////////////////////////
//			              Buttons                      //
/////////////////////////////////////////////////////////

button[data-button="push"]
	padding 12px 6px
	font-size 1em
	line-height 0
	
button,
a[data-type="button"]
	display inline-block
	height 24px
	line-height 24px
	font-size 11px
	padding 0 7px 0 7px
	margin 0 7px 0 0
	text-align center
	//float left
	cursor pointer
	text-decoration none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none
	*zoom 1
	*margin-left .3em

	&:before,
	&:after 
		display tablecontent ""
	&:after 
		clear both
	&:first-child 
		*margin-left 0

	&[data-size="small"]
		height 18px
		line-height 18px
		font-size 9px

	&[data-size="big"]
		height 32px
		line-height 32px
		font-size 16px
	
	&[data-size="huge"]
		height 48px
		line-height 48px
		font-size 22px


/////////////////////////////////////////////////////////
//			              Fields                       //
/////////////////////////////////////////////////////////

input,
select
	border 1px solid
	padding 4px 6px
	margin 4px 4px 6px 4px
	min-height 16px
	background-color transparent